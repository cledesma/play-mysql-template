# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Sample
# Routing # 1 - This works
# GET		/sample 				controllers.StaticFile.getHtml(file = "public/html/index.html") 
# Routing # 2 - This also works
GET 	/sample 					controllers.Assets.at(path="/public", file="/html/index.html")			

# Tasks
GET		/task						controllers.Application.listTasks()
POST	/task 						controllers.Application.createTask()
DELETE	/task/:id 					controllers.Application.deleteTask(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
